{
  "extends": "@workspace/typescript-config/vite-react-library.json",
  "compilerOptions": {
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@repo/data-ops/*": ["../../packages/data-ops/src/*"],
      "@repo/data-ops": ["../../packages/data-ops/src/index.ts"],
      "@repo/*": ["../../packages/*"]
    },
    "types": ["vite/client", "./worker-configuration.d.ts", "node", "vitest/globals", "@testing-library/jest-dom"],
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "noEmit": true,
    "outDir": "dist"
  },
  "references": [
    { "path": "../../packages/background-tasks" },
    { "path": "../../packages/data-ops" },
    { "path": "../../packages/logger" },
    { "path": "../../packages/ui" }
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "worker-configuration.d.ts",
    "vite.config.ts",
    "scripts/**/*.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
