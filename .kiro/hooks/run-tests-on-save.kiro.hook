{
  "enabled": true,
  "name": "Run Tests on Save",
  "description": "Automatically run related tests when a TypeScript/JavaScript file is saved",
  "version": "1",
  "when": {
    "type": "onFileSave",
    "filePattern": "**/*.{ts,tsx,js,jsx}"
  },
  "then": {
    "type": "askAgent",
    "prompt": "A file was just saved at ${filePath}. Use vitest MCP to run tests for the modified file. Follow these steps:\n1. If it's a test file (.test.ts/.test.tsx), run that specific test\n2. If it's a source file, find and run related tests in the same directory or with similar naming\n3. Use --run flag to avoid watch mode\n4. Report results with coverage if available\n5. For Yeko project: ensure French i18n strings are tested if the file contains translations"
  }
}
