{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@repo/data-ops/*": ["./src/*"]
    },
    "types": ["@cloudflare/workers-types", "vitest/globals", "node"],
    "allowImportingTsExtensions": false,
    "declaration": true,
    "declarationMap": false,
    "noEmit": false,
    "outDir": "./dist",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.tsx", "scripts/listUsers.mjs"]
}
