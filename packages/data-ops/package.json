{
  "name": "@repo/data-ops",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.14.0",
  "description": "Manage auth, database, schemas, and queries",
  "author": "",
  "license": "ISC",
  "keywords": [],
  "exports": {
    "./auth/*": {
      "types": "./dist/auth/*.d.ts",
      "default": "./dist/auth/*.js"
    },
    "./database/*": {
      "types": "./dist/database/*.d.ts",
      "default": "./dist/database/*.js"
    },
    "./zod-schema/*": {
      "types": "./dist/zod-schema/*.d.ts",
      "default": "./dist/zod-schema/*.js"
    },
    "./queries/*": {
      "types": "./dist/queries/*.d.ts",
      "default": "./dist/queries/*.js"
    },
    "./services/*": {
      "types": "./dist/services/*.d.ts",
      "default": "./dist/services/*.js"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json --outDir ./dist && tsc-alias",
    "better-auth:generate": "mkdir -p src/drizzle && npx @better-auth/cli@latest generate --config ./config/auth.ts --output ./src/drizzle/auth-schema.ts",
    "drizzle:generate": "drizzle-kit generate --config drizzle.config.ts",
    "drizzle:migrate": "drizzle-kit migrate --config drizzle.config.ts",
    "drizzle:pull": "drizzle-kit pull --config drizzle.config.ts",
    "studio": "drizzle-kit studio",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "seed": "node dist/seed/index.js",
    "seed:fresh": "node dist/seed/index.js --fresh",
    "verify": "node dist/verify.js"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "@planetscale/database": "^1.19.0",
    "@polar-sh/better-auth": "^1.1.0",
    "@polar-sh/sdk": "^0.34.13",
    "@types/pg": "^8.15.6",
    "better-auth": "^1.3.7",
    "better-sqlite3": "^12.2.0",
    "drizzle-orm": "^0.44.5",
    "nanoid": "^5.1.6",
    "pg": "^8.16.3",
    "resend": "^6.5.2",
    "zod": "^4.1.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250823.0",
    "@types/better-sqlite3": "^7.6.13",
    "@vitest/coverage-v8": "2.1.9",
    "@yeko/eslint-config": "workspace:^",
    "better-sqlite#": "link:@types/better-sqlite#",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.39.1",
    "mysql2": "^3.14.3",
    "postgres": "^3.4.7",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2",
    "vitest": "^2.0.0"
  }
}
