{
  "name": "@repo/data-ops",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.28.2",
  "description": "Manage auth, database, schemas, and queries",
  "author": "",
  "license": "ISC",
  "keywords": [],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "workerd": "./dist/src/index.js",
      "node": "./dist/src/index.js",
      "browser": "./dist/src/index.browser.js",
      "default": "./dist/src/index.js"
    },
    "./storage": {
      "types": "./dist/src/storage/index.d.ts",
      "default": "./dist/src/storage/index.js"
    },
    "./auth/server": {
      "types": "./dist/src/auth/server.d.ts",
      "default": "./dist/src/auth/server.js"
    },
    "./auth/setup": {
      "types": "./dist/src/auth/setup.d.ts",
      "default": "./dist/src/auth/setup.js"
    },
    "./auth/*": {
      "types": "./dist/src/auth/*.d.ts",
      "default": "./dist/src/auth/*.js"
    },
    "./database/*": {
      "types": "./dist/src/database/*.d.ts",
      "default": "./dist/src/database/*.js"
    },
    "./zod-schema/*": {
      "types": "./dist/src/zod-schema/*.d.ts",
      "default": "./dist/src/zod-schema/*.js"
    },
    "./errors": {
      "types": "./dist/src/errors.d.ts",
      "default": "./dist/src/errors.js"
    },
    "./queries/*": {
      "types": "./dist/src/queries/*.d.ts",
      "default": "./dist/src/queries/*.js"
    },
    "./services/*": {
      "types": "./dist/src/services/*.d.ts",
      "default": "./dist/src/services/*.js"
    },
    "./drizzle/*": {
      "types": "./dist/src/drizzle/*.d.ts",
      "default": "./dist/src/drizzle/*.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json --outDir ./dist && tsc-alias",
    "better-auth:generate": "mkdir -p src/drizzle && nlx @better-auth/cli@latest generate --config ./config/auth.ts --output ./src/drizzle/auth-schema.ts",
    "drizzle:generate": "drizzle-kit generate --config drizzle.config.ts",
    "drizzle:migrate": "drizzle-kit migrate --config drizzle.config.ts",
    "drizzle:pull": "drizzle-kit pull --config drizzle.config.ts",
    "studio": "drizzle-kit studio",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "reset:db": "npx tsx src/seed/reset-db.ts",
    "seed": "npx tsx src/seed/index.ts",
    "seed:fresh": "npx tsx src/seed/index.ts --fresh",
    "seed:test": "node scripts/seed-test-db.mjs",
    "verify": "node dist/verify.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "catalog:",
    "@aws-sdk/s3-request-presigner": "catalog:",
    "@neondatabase/serverless": "catalog:",
    "@planetscale/database": "catalog:",
    "@polar-sh/better-auth": "catalog:",
    "@polar-sh/sdk": "catalog:",
    "@repo/logger": "workspace:*",
    "@types/pg": "catalog:",
    "aws4fetch": "catalog:",
    "better-auth": "catalog:",
    "better-sqlite3": "catalog:",
    "drizzle-orm": "catalog:",
    "pg": "catalog:",
    "resend": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "catalog:",
    "@types/better-sqlite3": "catalog:",
    "@types/scrypt-js": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@workspace/typescript-config": "workspace:*",
    "@yeko/eslint-config": "workspace:^",
    "dotenv": "catalog:",
    "drizzle-kit": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-react-refresh": "catalog:",
    "mysql2": "catalog:",
    "postgres": "catalog:",
    "scrypt-js": "catalog:",
    "tsc-alias": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
