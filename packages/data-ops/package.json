{
  "name": "@repo/data-ops",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.25.0",
  "description": "Manage auth, database, schemas, and queries",
  "author": "",
  "license": "ISC",
  "keywords": [],
  "exports": {
    "./auth/*": {
      "types": "./dist/auth/*.d.ts",
      "default": "./dist/auth/*.js"
    },
    "./database/*": {
      "types": "./dist/database/*.d.ts",
      "default": "./dist/database/*.js"
    },
    "./zod-schema/*": {
      "types": "./dist/zod-schema/*.d.ts",
      "default": "./dist/zod-schema/*.js"
    },
    "./queries/*": {
      "types": "./dist/queries/*.d.ts",
      "default": "./dist/queries/*.js"
    },
    "./services/*": {
      "types": "./dist/services/*.d.ts",
      "default": "./dist/services/*.js"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json --outDir ./dist && tsc-alias",
    "better-auth:generate": "mkdir -p src/drizzle && npx @better-auth/cli@latest generate --config ./config/auth.ts --output ./src/drizzle/auth-schema.ts",
    "drizzle:generate": "drizzle-kit generate --config drizzle.config.ts",
    "drizzle:migrate": "drizzle-kit migrate --config drizzle.config.ts",
    "drizzle:pull": "drizzle-kit pull --config drizzle.config.ts",
    "studio": "drizzle-kit studio",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "seed": "node dist/seed/index.js",
    "seed:fresh": "node dist/seed/index.js --fresh",
    "verify": "node dist/verify.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "workspace:*",
    "@aws-sdk/s3-request-presigner": "workspace:*",
    "@neondatabase/serverless": "workspace:*",
    "@planetscale/database": "workspace:*",
    "@polar-sh/better-auth": "workspace:*",
    "@polar-sh/sdk": "workspace:*",
    "@types/pg": "workspace:*",
    "aws4fetch": "workspace:*",
    "better-auth": "workspace:*",
    "better-sqlite3": "workspace:*",
    "drizzle-orm": "workspace:*",
    "nanoid": "workspace:*",
    "pg": "workspace:*",
    "resend": "workspace:*",
    "zod": "workspace:*"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "workspace:*",
    "@types/better-sqlite3": "workspace:*",
    "@vitest/coverage-v8": "workspace:*",
    "@yeko/eslint-config": "workspace:^",
    "better-sqlite#": "link:@types/better-sqlite#",
    "dotenv": "workspace:*",
    "drizzle-kit": "workspace:*",
    "eslint": "workspace:*",
    "mysql2": "workspace:*",
    "postgres": "workspace:*",
    "tsc-alias": "workspace:*",
    "typescript": "workspace:*",
    "vitest": "workspace:*"
  }
}
