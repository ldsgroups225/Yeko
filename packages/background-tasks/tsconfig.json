{
  "extends": "@workspace/typescript-config/vite-react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "@cloudflare/workers-types",
      "node"
    ],
    "allowImportingTsExtensions": false,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "./dist"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
