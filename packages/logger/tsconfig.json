{
  "extends": "@workspace/typescript-config/base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo",
    "rootDir": "src",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "dist",
    "sourceMap": true,
    "erasableSyntaxOnly": false
  },
  "references": [],
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
